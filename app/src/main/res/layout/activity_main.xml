<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="buttonPressed"
    android:background="@drawable/background"
    android:scaleType="centerCrop"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/playGames_Button"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_margin="8dp"
                    android:background="@null"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/play_games_logo" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <ImageButton
                    android:id="@+id/settings_Button"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_margin="8dp"
                    android:background="@null"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/settings_icon" />
            </TableRow>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            app:srcCompat="@drawable/logo" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="2dp"
            android:layout_marginBottom="5dp"
            android:background="@null"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/achievements_button" />

        <ImageButton
            android:id="@+id/buttonLeaderboard"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="2dp"
            android:background="@null"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/leader_button" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="2dp"
            android:background="@null"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/stats_button" />

        <ImageButton
            android:id="@+id/buttonPlay"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="5dp"
            android:background="@null"
            android:onClick="buttonPressed"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/play_button" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>